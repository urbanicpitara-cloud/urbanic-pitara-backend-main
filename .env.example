# Redis Configuration
# Set to 'true' to enable Redis caching and background job processing
# Defaults to 'false' for safety - Redis is disabled unless explicitly enabled
REDIS_ENABLED=false

# Upstash Redis Credentials (only needed if REDIS_ENABLED=true)
# UPSTASH_REDIS_REST_URL=your_upstash_url_here
# UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# PhonePe Configuration
PHONEPE_MERCHANT_ID=your_merchant_id
PHONEPE_SALT_KEY=your_salt_key
PHONEPE_CLIENT_SECRET=your_client_secret
PHONEPE_MOCK=false

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Razorpay (optional payment gateway)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Environment
NODE_ENV=development
